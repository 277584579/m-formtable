{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "noImplicitAny": false,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors":true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "webpack-env"
      ],
      "paths": {
        "@/*": [
          "examples/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "examples/**/*.ts",
      "examples/**/*.tsx",
      "examples/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
  , "examples/main.js"  ],
    "exclude": [
      "node_modules"
    ]
  }
  